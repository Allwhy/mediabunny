{
	"compilerOptions": {
		"target": "ES2021",
		"strict": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
		"noPropertyAccessFromIndexSignature": true,
		"rootDir": "src",
		"outDir": "build",
		"declaration": true,
		"stripInternal": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	]
}